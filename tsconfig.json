{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "downlevelIteration": true,
    "strict": true,
    "declaration": true,
    "typeRoots": ["./types"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "examples"
  ]
}
